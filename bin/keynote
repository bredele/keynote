#!/usr/bin/env node

var resolve = require('path').resolve,
		program = require('commander'),
		walk = require('./walk');


/**
 * Usage.
 */

program
  .version(require('../package.json').version)
  .option('-o, --output', 'create keynote directory with output')  
  .option('-w, --watch', 'watch the input file for changes')

/**
 * Examples.
 */

program.on('--help', function () {
  console.log('  Examples:');
});


/**
 * Parse.
 */

program.parse(process.argv);


// // path
// var path = resolve(program.args.shift() || '.');
var path = resolve('.');

/**
 * Settings.
 */

var input = program.args[0] ? resolve(program.args[0]) : null;
var output = program.args[1] ? resolve(program.args[1]) : null;


console.log(walk(path));

